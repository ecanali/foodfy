{% extends '../layout.njk' %}

{% block head %}
    <title>Foodfy - Admin Chefs</title>
{% endblock head %}

{% block content %}
    <section>
        <div class="header-index">
            <h2 class="h2-admin">Gerenciar chefs</h2>
            {% if userSession.is_admin == true %}
                <a href="/admin/chefs/create" class="admin-button-1">Novo chef</a>
            {% endif %}
        </div>

        <div class="grid-chefs-admin">
            {% for chef in chefs %}
                <div class="chef-admin" id="{{ chef.id }}">
                    <img src="{{ chef.img.src }}" alt="{{ chef.name }}">
                    <div class="texto-chef-admin">
                        <h3>{{ chef.name }}</h3>
                        <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock content %}