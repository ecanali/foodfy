<div class="item">
    <h4>Nome</h4>
    <div>
        <input
            type="text"
            name="name"
            value="{{ chef.name }}"
            required="required"
        >
    </div>
</div>

<div class="item">
    <h4>Avatar</h4>
    
    {% if chefImage %}
        <div>
            <input
                type="url"
                class="avatar-url"
                value="http:{{ chefImage.src }}"
                readonly
            >
        </div>
    {% endif %}
    
    <div class="avatar-upload">
        <input 
            id="photos-input"
            type="file" 
            name="photos" 
            accept="image/*"
            onchange="PhotosUpload.handleFileInput(event)"
            style="display: none"
        >
        <input 
            type="button" 
            class="avatar-input" 
            onclick="document.getElementById('photos-input').click()"
        >
        Enviar Avatar
    </div>
</div>
