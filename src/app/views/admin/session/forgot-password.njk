{% extends './layout.njk' %}

{% block head %}
    <title>Foodfy - Recuperar senha</title>
{% endblock head %}

{% block content %}
    <main>
        <form action="/admin/users/forgot-password" method="POST" class="login-form">
        
            <div class="recipe-header-admin">
                <h2>Esqueceu a senha?</h2>
            </div>

            <div class="item">
                <h4>Email</h4>
                <div>
                    <input
                        type="text"
                        name="email"
                        value="{{ user.email }}"
                        placeholder="Digite seu email para recuperar sua senha" 
                        onblur="Validate.apply(this, 'isEmail')"
                        required
                    >
                </div>
            </div>
            
            <div class="login-fields">
                <a href="/admin/users/login">Voltar</a>

                <div class="admin-buttons">
                    <button class="admin-button-1" type="submit">Recuperar</button>
                </div>
            </div>

            <input 
                type="hidden" 
                name="id" 
                value="{{ user.id }}"
            >

        </form>        
    </main>
{% endblock content %}
