<div class="item">
    <h4>Email</h4>
    <div>
        <input
            type="text"
            name="email"
            value="{{ user.email }}"
            placeholder="Digite seu email" 
            onblur="Validate.apply(this, 'isEmail')"
            required
        >
    </div>
</div>

<div class="item">
    <h4>Senha</h4>
    <div class="input">
        <input 
            type="password"
            name="password"
            placeholder="Digite sua senha"
        >
    </div>
</div>