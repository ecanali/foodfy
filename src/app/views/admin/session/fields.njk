<div class="item">
    <h4>Email</h4>
    <div>
        <input
            type="text"
            name="email"
            value="{{ user.email }}"
            placeholder="Digite seu email" 
            onblur="Validate.apply(this, 'isEmail')"
            required
        >
    </div>
</div>

<div class="item">
    {% if token %}
        <h4>Nova senha</h4>
        {% else %}
        <h4>Senha</h4>
    {% endif %}
    <div class="input">
        <input 
            type="password"
            name="password"
            placeholder="Digite sua nova senha"
        >
    </div>
</div>

{% if token %}
    <div class="item">
        <h4>Repetir senha</h4>
        <div class="input">
            <input 
                type="password"
                name="passwordRepeat"
                placeholder="Repita a nova senha"
            >
        </div>
    </div>

    <input type="hidden" name="token" value="{{ token }}">
{% endif %}