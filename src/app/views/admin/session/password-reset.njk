{% extends './layout.njk' %}

{% block head %}
    <title>Foodfy - Nova senha</title>
{% endblock head %}

{% block content %}
    <main>
        <form action="/admin/users/password-reset" method="POST" class="login-form" autocomplete="new-password">
        
            <div class="recipe-header-admin">
                <h2>Nova senha</h2>
            </div>

            {% include 'admin/session/fields.njk' %}
            
            <div class="login-fields">
                <a href="#"></a>

                <div class="admin-buttons">
                    <button class="admin-button-1" type="submit">Salvar</button>
                </div>
            </div>

            <input 
                type="hidden" 
                name="id" 
                value="{{ user.id }}"
            >

        </form>        
    </main>
{% endblock content %}
